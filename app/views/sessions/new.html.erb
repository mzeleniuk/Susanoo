<div class="susanoo_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
    <fieldset>
      <legend><%= t('.legend_html') %></legend>

      <div class="field">
        <%= text_field_tag :name, params[:name], placeholder: t('.name_html'),
                           class: 'input_field' %>
      </div>

      <div class="field">
        <%= password_field_tag :password, params[:password], placeholder: t('.password_html'),
                               class: 'input_field' %>
      </div>

      <div>
        <%= submit_tag t('.login_html'), class: 'button_primary',
                       data: {disable_with: t('.logging_in_html')} %>
      </div>
    </fieldset>
  <% end %>
</div>
