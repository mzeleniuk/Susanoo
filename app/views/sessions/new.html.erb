<div class="Susanoo_form">
  <% if flash[:alert] %>
      <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
      <fieldset>
        <legend>Please Log In</legend>

        <div class="field">
          <%= text_field_tag :name, params[:name], size: 30, placeholder: 'Enter Your Name',
                             :class => 'input_field' %>
        </div>

        <div class="field">
          <%= password_field_tag :password, params[:password], size: 30, placeholder: 'Enter Your Password',
                                 :class => 'input_field' %>
        </div>

        <div>
          <%= submit_tag "Login", :class => 'button_primary' %>
        </div>
      </fieldset>
  <% end %>
</div>
