<h2><%= t('.title_html') %></h2>

<table>
  <%= render(cart.line_items) %>

  <tr class="total_line">
    <td colspan="2">Total:</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>
</table>

<p>
  <%= button_to t('carts.cart.checkout_html'), new_order_path, method: :get, class: 'button_primary',
                data: {disable_with: t('carts.cart.checkout_html')} %>
</p>

<p>
  <%= button_to t('carts.cart.empty_html'), cart, method: :delete, class: 'button',
                data: {confirm: t('carts.cart.empty_confirm_html')} %>
</p>
