<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag "favicon.png" %>
  <title>Susanoo <%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class="<%= controller.controller_name %>">
<div class="page-wrap">

    <div id="banner">
      <%= form_tag store_path, class: 'locale' do %>
          <%= select_tag 'set_locale',
                         options_for_select(LANGUAGES, I18n.locale.to_s),
                         onchange: 'this.form.submit()' %>
          <%= submit_tag 'submit' %>
          <%= javascript_tag "$('.locale input').hide()" %>
          <% end %>
      <%= image_tag("bookshelf.png", size: "45x45") %>
      <%= @page_title || t('.title') %>
    </div>

    <div id="columns">
      <div id="side">
        <div id="cart">
          <% if @cart %>
            <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
            <%= render @cart %>
            <% end %>
          <% end %>
        </div>
        <ul>
          <li><%= link_to t('.home'), store_path %></li>
          <li><%= link_to t('.questions'), questions_path %></li>
          <li><%= link_to t('.news'), news_path %></li>
          <li><%= link_to t('.contact'), contact_path %></li>
        </ul>
        <% if session[:user_id] %>
        <ul>
          <li><%= link_to 'Orders', orders_path %></li>
          <li><%= link_to 'Products', products_path %></li>
          <li><%= link_to 'Users', users_path %></li>
        </ul>
            <%= button_to 'Logout', logout_path, method: :delete %>
            <% end %>
      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>
</div>

    <div class="footer">
      <div class="links">
        <ul>
          <li><h3>Content</h3></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Contacts</a></li>
        </ul>
        <ul>
        <li><h3>Follow Us</h3></li>
        <li><a href="#">Facebook</a></li>
        <li><a href="#">Twitter</a></li>
        </ul>
        <ul>
          <li><h3>Legal</h3></li>
          <li><a href="#">Terms and Conditions</a></li>
          <li><a href="#">Privacy Policy</a></li>
        </ul>
      </div>
      <hr>
      <div class="copyright">Michael Zelenyuk, 2015</div>
      <div class="image">
      <%= image_tag("footer_logo.jpg") %></div>
    </div>

</body>
</html>
